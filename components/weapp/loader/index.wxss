.weapp-loader-more {
  position: relative;
  text-align: center;
  margin: 2px 20px;
}

.weapp-loader-more::before{
  width: 100%;
  height: 0;
  content: '';
  border-top: 1px solid #eee;
  display: block;
  position: absolute;
  top: 50%;
  z-index: 2;
}

.weapp-loader-more-txt {
  display: inline-block;
   background: #fff; 
  padding: 0 8px;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  color: #999;
  position: relative;
  z-index: 4;
}

.weapp-loader-more-txt.loading::before {
  content: ' ';
  width: 20px;
  height: 20px;
  margin: -2px 4px 0 0;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: uiLoading 1s steps(12, end) infinite;
  animation: uiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

@-webkit-keyframes uiLoading {
  0% {
    transform: rotate3d(0, 0, 1, 0deg);
  }

  100% {
    transform: rotate3d(0, 0, 1, 360deg);
  }
}

@keyframes uiLoading {
  0% {
    transform: rotate3d(0, 0, 1, 0deg);
  }

  100% {
    transform: rotate3d(0, 0, 1, 360deg);
  }
}

.weapp-loader-nodata {
  text-align: center;
  padding: 20px 0;
}

.weapp-loader-nodata-txt {
  text-align: center;
  display: block;
  color: #ccc;
  margin: 6px 0 0 0;
}