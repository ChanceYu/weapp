<view class="page">
    <view class="page__hd">
        <view class="page__title">Tab</view>
        <view class="page__desc">选项卡</view>
    </view>
    <view class="page__bd page__bd_spacing weapp-bg-white">
        <view class="weui-tab">
            <weapp-tab list="{{ list1 }}" active-index="{{activeIndex}}"  bind:change="onTabChange" />
            <view class="weui-tab__panel">
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">选项一的内容</view>
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">选项二的内容</view>
                <view class="weui-tab__content" hidden="{{activeIndex != 2}}">选项三的内容</view>
            </view>
        </view>


        <view class="weui-tab">
            <weapp-tab list="{{ list2 }}"  bind:change="onTabChange2" />
            <view class="weui-tab__panel">
                <view class="weui-tab__content" hidden="{{activeIndex2 != 0}}">活动一的内容</view>
                <view class="weui-tab__content" hidden="{{activeIndex2 != 1}}">活动二的内容</view>
            </view>
        </view>

        <button class="weui-btn mini-btn" type="default" size="mini" bindtap="handlerSelect">选中活动2</button>
    </view>
</view>
